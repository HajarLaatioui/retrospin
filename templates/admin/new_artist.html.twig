{% extends 'base.html.twig' %}

{% block title %}Ajouter un artiste{% endblock %}

{% block body %}
    <h1>Ajouter un nouvel artiste</h1>

    {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}

        <div class="col-md-6">
            {{ form_row(form.name) }}
        </div>

        <div class="col-12">
            <button class="btn btn-primary">Enregistrer</button>
        </div>

    {{ form_end(form) }}
{% endblock %}