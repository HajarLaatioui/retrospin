{% extends 'base.html.twig' %}

{% block title %}Modifier l’artiste{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>✏️ Modifier l’artiste “{{ artist.name }}”</h1>

        {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
            <div class="col-md-6">
                {{ form_row(form.name) }}
            </div>
            <div class="col-12">
                <button class="btn btn-primary">Enregistrer</button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}